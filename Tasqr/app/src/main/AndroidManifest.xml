<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tasqr">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Tasqr">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateCompanyActivity"
            android:label="@string/title_activity_create_company"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ChangeAvatarActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".UserListActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".ProfileActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name=".AddProjectActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name=".AddUsersActivity"
            android:theme="@style/Theme.Tasqr_NoToolBar" />
    </application>

</manifest>