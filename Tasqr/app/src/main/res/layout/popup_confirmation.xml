<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/tasqr_purple"
    >

    <TextView
        android:id="@+id/conftext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="ARE YOU SURE YOU WANT TO DELETE SAMPLE LONG LONG LONG NAME?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/tasqr_yellow"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="5dp"
        android:layout_height="0dp"
        android:background="@color/tasqr_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conftext"
        app:layout_constraintBottom_toBottomOf="@+id/dismiss"/>

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/tasqr_purple"
        app:layout_constraintBottom_toBottomOf="@+id/conftext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/conftext" />

    <Button
        android:id="@+id/dismiss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="@color/tasqr_purple"
        android:backgroundTint="@color/tasqr_yellow"
        android:background="@color/tasqr_yellow"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <Button
        android:id="@+id/ok"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:background="@color/tasqr_yellow"
        android:textColor="@color/tasqr_purple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

</androidx.constraintlayout.widget.ConstraintLayout>