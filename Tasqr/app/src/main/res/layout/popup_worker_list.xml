<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/subtask_name"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="@color/tasqr_purple">

    <TextView
        android:padding="10dp"
        android:id="@+id/coworkers"
        android:text="YOUR CO-WORKERS"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ListView
        android:id="@+id/workerList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/dismiss"
        android:layout_below="@id/coworkers"/>

    <Button
        android:id="@+id/dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CANCEL"
        android:textColor="@color/tasqr_purple"
        android:backgroundTint="@color/tasqr_yellow"
        android:background="@color/tasqr_yellow"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>