<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/projectImage"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/templateproject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/projectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:textColor="@color/tasqr_yellow"
        android:textSize="30dp"
        android:textStyle="bold"
        android:text="SAMPLE TEXT"
        app:layout_constraintBottom_toBottomOf="@+id/projectImage"
        app:layout_constraintEnd_toEndOf="@+id/projectImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:shadowColor="@color/black"
        android:shadowDx="-4"
        android:shadowDy="2"
        android:shadowRadius="0.01"/>

    <TextView
        android:id="@+id/projectOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_marginEnd="16dp"
        android:text="SAMPLE TEXT"
        android:layout_marginBottom="8dp"
        android:textStyle="bold|italic"
        android:textColor="@color/tasqr_yellow"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/projectImage"
        app:layout_constraintEnd_toEndOf="parent"
        android:shadowColor="@color/black"
        android:shadowDx="-4"
        android:shadowDy="2"
        android:shadowRadius="0.01" />
</androidx.constraintlayout.widget.ConstraintLayout>